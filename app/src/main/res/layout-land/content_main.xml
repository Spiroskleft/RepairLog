<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackgroung"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_information"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        android:layout_marginTop="8dp" />


    <ImageButton
        android:id="@+id/imageButtonCar"
        android:layout_width="122dp"
        android:layout_height="113dp"
        android:background="@drawable/ic_car_24dp"
        android:layout_marginLeft="16dp"
        android:onClick="carSelected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonMoto"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.322"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCar"
        app:layout_constraintVertical_bias="0.74" />

    <ImageButton
        android:id="@+id/imageButtonMoto"
        android:layout_width="103dp"
        android:layout_height="113dp"
        android:layout_marginRight="164dp"
        android:background="@drawable/ic_motorcycle_dp"
        android:onClick="motoSelected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMoto"
        app:layout_constraintVertical_bias="0.73" />



    <Button
        android:id="@+id/buttonCar"
        android:layout_width="122dp"
        android:layout_height="113dp"
        android:layout_marginTop="8dp"
        android:text="@string/carString"
        android:onClick="carSelected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonMoto"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintVertical_bias="0.947" />

    <Button
        android:id="@+id/buttonMoto"
        android:layout_width="122dp"
        android:layout_height="113dp"
        android:text="@string/motoString"
        android:onClick="motoSelected"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="145dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.95" />
</android.support.constraint.ConstraintLayout>